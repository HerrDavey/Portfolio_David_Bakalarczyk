<Window x:Class="zasobyLogiczne.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zasobyLogiczne"
        mc:Ignorable="d"
        Title="Testowanie zasobów ver. 1.0" Height="150" Width="500">

    <Window.Resources>
        <LinearGradientBrush x:Key="tloPrzyciskow" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="White" Offset="0"/>
            <GradientStop Color="LightBlue" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Grid>
        <WrapPanel>
            <Button Content="Potwierdź" Margin="10" Padding="10" Background="{StaticResource tloPrzyciskow }"/>
            <Button Content="Drukuj" Margin="10" Padding="10" Background="{StaticResource tloPrzyciskow }"/>
            <Button Content="Zapisz" Margin="10" Padding="10" Background="{StaticResource tloPrzyciskow }"/>
            <Button Content="Anuluj" Margin="10" Padding="10" Background="{StaticResource tloPrzyciskow }"/>
            <Button Content="Powrót" Margin="10" Padding="10" Background="{StaticResource tloPrzyciskow }"/>
        </WrapPanel>
    </Grid>
</Window>
