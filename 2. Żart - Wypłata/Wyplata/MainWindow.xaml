<Window x:Class="Wyplata.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wyplata"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="550">
    <Grid>
        <Button x:Name="btnTak" Content="Tak" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Times New Roman" FontWeight="Bold" FontSize="20" Margin="75,150,0,0" Width="200" MouseEnter="btnTak_MouseEnter" MouseLeave="btnTak_MouseLeave"/>
        <Button x:Name="btnNie" Content="Nie" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Times New Roman" FontWeight="Bold" FontSize="20" Margin="290,150,0,0" Width="200"/>
        <Label Content="Czy chcesz otrzymać większą wypłatę?" HorizontalAlignment="Left" Margin="115,65,0,0" VerticalAlignment="Top" FontSize="20"/>
    </Grid>
</Window>
