<Window x:Class="wprowadzenieDoXAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wprowadzenieDoXAML"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">
    <Grid>
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,35,0,0" FontFamily="Times New Roman" FontSize="20" FontWeight="Bold" Click="btnStart_Click" BorderBrush="#FFD9A6C1" Foreground="#FF8C0606" IsHitTestVisible="False">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF17DCA0" Offset="0"/>
                    <GradientStop Color="#FF154182" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="btnTime" Content="Czas" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,100,0,0" FontFamily="Times New Roman" FontSize="20" FontWeight="Bold" MouseEnter="btnTime_MouseEnter" MouseLeave="btnTime_MouseLeave"/>
    </Grid>
</Window>
